<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.AdminViewController">
    <top>
        <MenuBar>
            <Menu text="File">
                <items>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                    <MenuItem text="Quit" onAction="#handleQuit"/>
                </items>
            </Menu>
            <Menu text="Actions">
                <items>
                    <MenuItem text="Create New User" onAction="#handleCreateNewUser"/>
                </items>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="userTableView">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <!-- Add more columns as needed -->
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Delete Selected User" onAction="#handleDeleteSelectedUser"/>
            <!-- Any other buttons -->
        </HBox>
    </bottom>
</BorderPane>
