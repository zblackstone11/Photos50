<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.AdminViewController">
    <top>
        <MenuBar>
            <Menu text="File">
                <items>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                    <MenuItem text="Quit" onAction="#handleQuit"/>
                </items>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="userTableView">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username">
                    <cellValueFactory>
                        <PropertyValueFactory property="username"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Delete Selected User" onAction="#handleDeleteSelectedUser"/>
            <Button text="Create New User" onAction="#handleCreateNewUser"/>
        </HBox>
    </bottom>
</BorderPane>
